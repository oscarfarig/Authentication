<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ventas">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#00BCD4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tvAccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="acccion"
            android:textAlignment="center"
            android:textSize="20pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCodigoProductoVentas"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:hint="CÃ³digo del prodcuto"
            android:textAlignment="center"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnBuscarVentas"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:text="Buscar" />

        <TextView
            android:id="@+id/tvNombreProductoVenta"
            android:layout_width="match_parent"
            android:layout_height="20pt"

            android:layout_marginVertical="5pt"
            android:hint="Nombre del producto"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvStockVentas"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:hint="Stock" />

        <TextView
            android:id="@+id/tvPrecioVentas"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="12.50$" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="Ingresa la cantidad"
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTotalPagar"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:hint="Total a pagar: $"
            android:textAlignment="center"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnTotal"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:text="Total a pagar" />

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Comprar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>